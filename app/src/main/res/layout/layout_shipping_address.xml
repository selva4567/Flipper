<?xml version="1.0" encoding="utf-8"?>

<com.selvakumarsm.elasticmodule2.ElasticView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layoutDescription="@xml/layout_shipping_details_scene"
    app:collapsedSceneId="@+id/collapsed"
    app:expandedSceneId="@+id/expanded">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:text="Select a delivery address"/>

    <RadioButton
        android:id="@+id/rbForAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvReceiverName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selvakumar Mohan"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvDoorNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1-100/121"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvStreet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sriram Nagar, A Block"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hyderabad"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvStateWithPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Telangana 500084"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/ivDownArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_expand"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

</com.selvakumarsm.elasticmodule2.ElasticView>