<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/expanded">
        <Constraint android:id="@id/tvTitle">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"/>
        </Constraint>
        <Constraint android:id="@+id/ivDownArrow">
            <PropertySet android:visibility="invisible" />
        </Constraint>
        <Constraint android:id="@+id/rbForAddress">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                />
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/tvReceiverName">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/rbForAddress"
                motion:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/tvDoorNo">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/rbForAddress"
                motion:layout_constraintTop_toBottomOf="@+id/tvReceiverName"
                android:layout_marginStart="20dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/tvStreet">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/rbForAddress"
                motion:layout_constraintTop_toBottomOf="@+id/tvDoorNo"
                android:layout_marginStart="20dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/tvCity">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/rbForAddress"
                motion:layout_constraintTop_toBottomOf="@+id/tvStreet"
                android:layout_marginStart="20dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/tvStateWithPin">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/rbForAddress"
                motion:layout_constraintTop_toBottomOf="@+id/tvCity"
                android:layout_marginStart="20dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint android:id="@id/tvTitle">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"/>
        </Constraint>
        <Constraint android:id="@+id/ivDownArrow">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/tvTitle"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="30dp"/>
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/rbForAddress">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/tvReceiverName">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/tvDoorNo">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/tvStreet">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/tvCity">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/tvStateWithPin">
            <PropertySet android:visibility="gone" />
        </Constraint>
    </ConstraintSet>
</MotionScene>