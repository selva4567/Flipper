<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/expanded"
        motion:constraintSetStart="@id/collapsed"
        motion:duration="1000">
        <OnClick
            motion:targetId="@+id/virtualCard"
            motion:clickAction="toggle"/>
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:layout_height="1dp"
            motion:layout_constraintEnd_toStartOf="@+id/parentRightGuideline"
            motion:layout_constraintStart_toStartOf="@+id/parentLeftGuideline"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/virtualCard"
            android:id="@+id/transactionGroups"
            android:visibility="gone"/>
        <Constraint
            android:id="@+id/virtualCard"
            motion:layout_constraintEnd_toStartOf="@+id/parentRightGuideline"
            android:layout_width="300dp"
            android:layout_height="200dp"
            motion:layout_constraintTop_toBottomOf="@+id/tvTitle"
            motion:layout_constraintStart_toStartOf="@+id/parentLeftGuideline"
            android:layout_marginTop="16dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/parentRightGuideline"
            motion:layout_constraintStart_toStartOf="@+id/parentLeftGuideline"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/virtualCard"
            android:id="@+id/transactionGroups"
            android:visibility="visible"/>
    </ConstraintSet>
</MotionScene>