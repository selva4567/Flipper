<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/mainTransition"
        motion:constraintSetStart="@id/collapsed"
        motion:constraintSetEnd="@id/expanded">
    </Transition>
    <ConstraintSet android:id="@+id/expanded">
        <Constraint android:id="@+id/ivPhoto">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="@id/tvDescription"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
        <Constraint
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_editor_absoluteX="10dp">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/ivPhoto" />
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/card">
            <PropertySet android:visibility="gone"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint android:id="@+id/ivPhoto">
            <Layout
                android:layout_width="0dp"
                android:layout_height="200dp"
                motion:layout_constraintEnd_toEndOf="@id/card"
                motion:layout_constraintStart_toStartOf="@id/card"
                motion:layout_constraintTop_toTopOf="@id/card" />
            <Transform
                android:elevation="7dp"/>
        </Constraint>
        <Constraint android:id="@+id/tvDescription">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/card">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"/>

            <PropertySet android:visibility="visible"/>

            <Transform
                android:elevation="5dp"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>